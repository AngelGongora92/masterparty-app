{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": {
    "source": "functions"
  },
  "hosting": [
    {
      "target": "masterparty-dev",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/api/lead",
          "function": "addProviderLead"
        },
        {
          "source": "/api/send-verification-email",
          "function": "sendCustomVerificationEmail"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "production",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/api/lead",
          "function": "addProviderLead"
        },
        {
          "source": "/api/send-verification-email",
          "function": "sendCustomVerificationEmail"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}